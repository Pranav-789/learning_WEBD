{
  "manifest_version": 3,
  "name": "Tab Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on each tab (active, passive, background).",

  "permissions": ["tabs", "storage"],

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  }
}
